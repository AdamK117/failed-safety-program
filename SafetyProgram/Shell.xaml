<Fluent:RibbonWindow x:Class="PrismAggregatorDesignTest.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.codeplex.com/CompositeWPF"
        xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
        Title="Shellz" Height="1000" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Main Content -->
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <!-- This row fills to the bottom of the application window -->
        </Grid.RowDefinitions>

        <!-- Ribbon interface -->
        <ContentControl Grid.Row="0" cal:RegionManager.RegionName="RibbonView" />
        
        <!-- Main Window -->
        <ContentControl Grid.Row="1" Margin="5" cal:RegionManager.RegionName="MainWindow" />
    </Grid>
</Fluent:RibbonWindow>
