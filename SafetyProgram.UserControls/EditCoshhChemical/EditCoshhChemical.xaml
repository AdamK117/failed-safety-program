<Window x:Class="SafetyProgram.UserControls.EditCoshhChemical"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hazards="clr-namespace:SafetyProgram.UserControls.Controls.Hazards"
        Title="EditCoshhChemical" Width="300" Height="150"
        Name="EditCoshhChemicalWindow">
    <StackPanel>
        <hazards:HazardList Hazards="{Binding Path=Model.Hazards}" />
        <TextBox Text="{Binding Path=Model.Name}" />
        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding Path=Model.Value}" />
            <TextBox Text="{Binding Path=Model.Unit}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="OK" />
            <Button Content="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
